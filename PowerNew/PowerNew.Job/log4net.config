<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <!-- log4net日志配置 -->
  <log4net>
    <!--输出到控制台命令行中-->
    <appender name="ColoredConsole" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="FATAL" />
        <foreColor value="Red" />
        <backColor value="White" />
      </mapping>
      <mapping>
        <level value="ERROR" />
        <foreColor value="Red, HighIntensity" />
      </mapping>
      <mapping>
        <level value="WARN" />
        <foreColor value="Yellow" />
      </mapping>
      <mapping>
        <level value="INFO" />
        <foreColor value="White" />
        <!--<foreColor value="Cyan" />-->
      </mapping>
      <mapping>
        <level value="DEBUG" />
        <foreColor value="Green" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%-5p:[%d]  %m%n" />
      </layout>
    </appender>

    <!-- 通用公共日志 -->
    <appender name="LogCommon" type="log4net.Appender.RollingFileAppender">
      <file value="Logs/"></file>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <maxSizeRollBackups value="100" />
      <datePattern value="yyyyMMdd&quot;.log&quot;" />
      <maximumFileSize value="100MB" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%-5p:[%d]  %m%n" />
      </layout>
    </appender>

    <!-- 通用错误日志 -->
    <appender name="LogError" type="log4net.Appender.RollingFileAppender">
      <file value="Logs/"></file>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <maxSizeRollBackups value="100" />
      <datePattern value="error_yyyyMMdd&quot;.log&quot;" />
      <maximumFileSize value="100MB" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%-5p:[%d]  %m%n" />
      </layout>
    </appender>

    <!--程序运行调试与异常日志-->
    <root>
      <!--<level value="ALL" />-->
      <appender-ref ref="ColoredConsole"/>
      <appender-ref ref="LogCommon" />
    </root>

    <logger name="error">
      <!--<level value="ALL" />-->
      <!--<appender-ref ref="ColoredConsole"/>-->
      <appender-ref ref="LogError" />
    </logger >

  </log4net>
</configuration>